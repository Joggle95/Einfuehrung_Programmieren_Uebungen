<?php

$potenz;

if(isset($_POST["potenzen"]))
{
    $potenz=$_POST["potenzen"];
}

function potenz($n){
    if ($n > 1){
        $result = 20 * (potenz($n - 1));
    }
    else {
        $result = 20;
    }
    return $result;
}

$uebergabe = potenz($potenz);

echo $uebergabe;

?>
